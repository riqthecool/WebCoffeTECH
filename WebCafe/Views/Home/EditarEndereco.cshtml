@model WebCafe.Models.Endereco

<div class="profile-container">
    <h1 class="profile-title">Editar Endereço</h1>

    <form asp-action="EditarEndereco" method="post">
        <input type="hidden" asp-for="Id" />
        <input type="hidden" asp-for="ContaId" />
        <div class="form-group">
            <label for="rua">Rua:</label>
            <input type="text" class="form-control" id="rua" asp-for="Rua" required />
        </div>
        <div class="form-group">
            <label for="cep">CEP:</label>
            <input type="text" class="form-control" id="cep" asp-for="CEP" required />
        </div>
        <div class="form-group">
            <label for="numero">Número:</label>
            <input type="text" class="form-control" id="numero" asp-for="Numero" required />
        </div>
        <div class="form-group">
            <label for="bairro">Bairro:</label>
            <input type="text" class="form-control" id="bairro" asp-for="Bairro" required />
        </div>
        <div class="form-group">
            <label for="cidade">Cidade:</label>
            <input type="text" class="form-control" id="cidade" asp-for="Cidade" required />
        </div>
        <button type="submit" class="btn btn-primary">Salvar Alterações</button>
    </form>
</div>
